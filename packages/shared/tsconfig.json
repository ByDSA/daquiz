{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false, // Para no necesitar tslib en producci√≥n
    "inlineSources": true,
    "lib": ["dom", "es2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "#/*": ["src/*"],
      "#modules/*": ["src/modules/*"],
      "#tests": ["tests"],
      "#tests/*": ["tests/*"],
      "#utils/*": ["src/utils/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "types": ["node"]
}
